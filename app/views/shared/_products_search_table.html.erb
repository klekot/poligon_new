<table width="100%" class="table table-bordered table-condensed table-responsive" >
  <caption>Поиск по складу</caption>
  <thead>
    <tr>
      <th width="9%" style="text-align:center">Изображение</th>
      <th width="40%" style="text-align:center">Наименование</th>
      <th width="19%" style="text-align:center">Склад</th>
      <th width="32%" style="text-align:center">Цены</th>
    </tr>
  </thead>
  <tbody>
    <% locals[:products].results.each do |product| %>
      <tr>
        <% productImage = ImageFile.where('owner_id = ? and file_type_id = 1', product.id).first %>
        <% if productImage != nil %>
          <% imagePath = productImage.path.gsub!("c:\\poligon_images", "http://www.poligon.info/images").gsub!("\\", "/") %>
          <td><%= link_to image_tag(imagePath, class: "img-responsive center-block product-image-container"), imagePath, class: "fancybox" %></td>
        <% else %>
          <td></td>
        <% end %>
        <td style="vertical-align: top;">
          <table class="table table-responsive">
            <%= render "shared/breadcrumb_search", locals: { product: product } %>
            <tr>
            <% unless product.article.nil? or product.article == '' %>
              <td>
                <span class="product-title">
                  <%= link_to "(" + product.article + ") " + product.title, product %>
                </span>
              </td>
              <% else %>
                <td>
                  <span class="product-title">
                    <%= link_to product.title, product %>
                  </span>
                </td>
              <% end %>
            </tr>
            <tr>
              <td><%= product.description %></td>
            </tr>
          </table>
        </td>
        <% if user_signed_in? %>
          <td style="vertical-align: top;">
            <%= render partial: 'shared/product_quantities_table', locals: {product: product} %>
          </td>
          <td style="vertical-align: top;">
            <table class="table table-responsive" style="width: 100%">
              <tr>
              <% unless product.price == 0 %>
                <td style="vertical-align: top;">
                  <%= render partial: 'shared/product_prices_table', locals: {product: product} %>
                </td>
              <% else %>
                <td style="align-content: center;">
                  Звоните:<br>(812)325-42-20
                </td>
              <% end %>
              </tr>
              <tr>
                <td>
                  <div style="float: left;">
                    <% product_pdf = @products_pdfs.find_by(owner_id: product.id) %>
                    <% if product_pdf != nil and product_pdf.path != "c:\\poligon_datasheets\\" %>
                      <% pdf_path = product_pdf.path.gsub!("c:\\poligon_datasheets\\datasheets", "http://www.poligon.info/PDF").gsub!("\\", "/") %>
                      <button type="button" class="btn btn-danger" target="_blank" onclick="window.open(&quot;<%= pdf_path %>&quot;)" >
                        PDF
                      </button>
                    <% else %>
                      <button type="button" class="btn btn-danger" target="_blank" onclick="no_pdf()" >
                        PDF
                      </button>
                    <% end %>
                  </div>
                  <div style="float: right;">
                    <% quantity = Quantity.find_by( product_id: product.id ) %>
                    <% result_quantity = 0 %>
                    <% result_quantity = quantity.stock - quantity.reserved  if !quantity.nil? %>
                    <% if get_prices_eur(product)[1].round(2) == get_prices_eur(product)[0].round(2) %>
                      <% price = get_prices_eur(product)[0].round(2) %>
                      <% price_rub = get_prices_rub(product)[0].round(2) %>
                      <% price_rub_nonds = price_rub / 1.18 %>
                    <% else %>
                      <% price = get_prices_eur(product)[1].round(2) %>
                      <% price_rub = get_prices_rub(product)[1].round(2) %>
                      <% price_rub_nonds = price_rub / 1.18 %>
                    <% end %>
                    <% unless price == 0 %>
                      <% if product.currency_id == 1 %>
                        <button class="btn btn-info copy-btn" id="my-button" data-clipboard-text="<%= product.title %> — Цена: <%= price %> евро c НДС. Количество: <%= result_quantity %> шт.">
                          EUR
                        </button>
                      <% end %>
                      <button class="btn btn-success copy-btn" id="my-button" data-clipboard-text="<%= product.title %> — Цена: <%= price_rub %> рублей c НДС. Количество: <%= result_quantity %> шт.">
                        RUB
                      </button>
                      <button class="btn btn-warning copy-btn" id="my-button" data-clipboard-text="<%= product.title %> — Цена: <%= price_rub_nonds %> рублей без НДС. Количество: <%= result_quantity %> шт.">
                        Без НДС
                      </button>
                    <% end %>
                  </div>
                </td>
              </tr>
            </table>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

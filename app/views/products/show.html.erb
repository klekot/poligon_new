<p id="notice"><%= notice %></p>
<ol class="breadcrumb">
  <li><%= link_to 'Каталог', categories_path %></li>
  <% @parents_array.reverse_each do |item| %>
      <li><%= link_to item.title, item %></li>
  <% end %>
</ol>
<h2><%= @product.title %></h2>
<h4>Тип устройств: <%= @productKind.title %></h4>
<p><%= @product.description %></p>
<p style="color: red; font-weight: bolder;">
  <%= @product.anons if !@product.anons.nil? %>
</p>
<hr>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-4">
      <% if @productImage != nil %>
        <p>
          <% imagePath = @productImage.path.gsub!("c:\\poligon_images", "http://www.poligon.info/images").gsub!("\\", "/") %>
          <%= link_to(image_tag(imagePath, class: "img-responsive center-block", :width => '200px'), imagePath, class: "fancybox") %>
        </p>
      <% else %>
        <p style="font-weight: bold; color: red;">нет изображения</p>
      <% end %>
      <hr>
      <% if @productPdf != nil and @productPdf.path != "c:\\poligon_datasheets\\" %>
        <p>
          <% pdfPath = @productPdf.path.gsub!("c:\\poligon_datasheets\\datasheets", "http://www.poligon.info/PDF").gsub!("\\", "/") %>
          <%= image_tag("design/pdf_doc.gif", height: '20', width: '20') %>
          <%= link_to( " Описание в формате PDF", pdfPath) %>
        </p>
      <% else %>
        <p style="font-weight: bold; color: red;">Описание в формате PDF отсутствует</p>
      <% end %>
      <hr>
      <%= render "shared/price_cases", locals: { retail_price: @retail_price } %>
      <p style="color: green">
        <% if !Quantity.find_by(product_id: @product.id).nil? && Quantity.find_by(product_id: @product.id).stock > 0 %>
          <i>Товар есть на складе</i>
        <% else %>
          <i>Срок поставки: <%= @product.delivery_time %></i>
        <% end %>
      </p>
    </div>
    <div class="col-xs-8">
      <ul class="nav nav-tabs">
        <% if user_signed_in? %>
          <li class="active"><a href="#product_data_tab" data-toggle="tab">Цены и наличие</a></li>
          <li><a href="#properties_tab" data-toggle="tab">Технические характеристики</a></li>
        <% else %>
          <li class="active"><a href="#properties_tab" data-toggle="tab">Технические характеристики</a></li>
        <% end %>
        <li><a href="#functions_tab" data-toggle="tab">Функции</a></li>
        <li><a href="#plugs_tab" data-toggle="tab">Схемы подключения</a></li>
        <li><a href="#dimensions_tab" data-toggle="tab">Размеры</a></li>
      </ul>
      <div class="tab-content">
        <% if user_signed_in? %>
          <div class="tab-pane fade in active" id="product_data_tab">
            <%= render "shared/product_data_tab" %>
          </div>
          <div class="tab-pane fade" id="properties_tab">
            <%= render "shared/product_properties_tab" %>
          </div>
        <% else %>
          <div class="tab-pane fade in active" id="properties_tab">
            <%= render "shared/product_properties_tab" %>
          </div>
        <% end %>
        <div class="tab-pane fade" id="functions_tab">
          <%= render "shared/product_functions_tab" %>
        </div>
        <div class="tab-pane fade" id="plugs_tab">
          <%= render "shared/product_plugs_tab" %>
        </div>
        <div class="tab-pane fade" id="dimensions_tab">
          <%= render "shared/product_dimensions_tab" %>
        </div>
      </div>
    </div>
  </div>
</div>

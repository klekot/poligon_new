<br>

<h3>Новости</h3>
<% @news_items.each do |news_item| %>
  <a href="<%= news_item_url(news_item) %>">
    <%= news_item.title %>
  </a><br>
<% end %>

<h3>Статьи</h3>
<% @articles.each do |article| %>
  <a href="<%= article_url(article) %>">
    <%= article.title %>
  </a><br>
<% end %>

<h3>Видео</h3>
<% @videos.each do |video| %>
  <a href="<%= video_url(video) %>">
    <%= video.title %>
  </a><br>
<% end %>

<h3>Обзоры</h3>
<% @reviews.each do |review| %>
  <a href="<%= review_url(review) %>">
    <%= review.title %>
  </a><br>
<% end %>

<h3>Дополнения</h3>
<% @additions.each do |addition| %>
  <a href="<%= addition_url(addition) %>">
    <%= addition.title %>
  </a><br>
<% end %>

<h3>Категории</h3>
<% @categories.each do |category| %>
  <a href="<%= category_url(category) %>">
    <h4><%= category.title %></h4>
  </a><br>
  <% @products.each do |product| %>
    <ul>
    <% if product.available == 1 and
          product.category_id == category.id %>
      <li>
        <a href="<%= product_url(product) %>">
          <%= product.title %>
        </a>
      </li>
    <% end %>
    </ul>
  <% end %>
<% end %>

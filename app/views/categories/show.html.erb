<ol class="breadcrumb">
  <li><%= link_to 'Каталог', categories_path %></li>
  <% @parents_array.reverse_each do |item| %>
    <li><%= link_to item.title, item %></li>
  <% end %>
</ol>
<div class="row">
  <div class="col-md-3 categories-left"  >
    <%= render "shared/category_vendor_logo" %>
    <% unless @subCategories.empty? %>
    <ul class="nav nav-pills nav-stacked categories-navigation">
      <% @subCategories.each do |sc| %>
          <li><%= link_to sc.title, sc %></li>
      <% end %>
    </ul>
    <% end %>
    <% unless @recentCategory.more_info.nil? || @recentCategory.more_info == '' %>
      <br>
      <button type="button" class="btn btn-info" data-toggle="collapse" data-parent="#accordion" href="#additionInfo">
        <span class="glyphicon glyphicon-info-sign"></span>&nbsp;Дополнительная информация
      </button>
    <% end %>
  </div>
  <div class="col-md-9 categories-right" >
    <div class="container-fluid" >
      <div class="row" >
        <div class="col-md-12" >
          <%= render "shared/vendor_location_picture" %>
        </div>
      </div>
      <div class="row" >
        <div class="col-md-12" >
          <div class="category-header">
            <h2><%= @recentCategory.title %></h2>
          </div>
        </div>
      </div>
      <div class="row" >
        <div class="col-md-9" >
          <%= @recentCategory.description
                             .gsub('href="/PDF', 'href="http://www.poligon.info/PDF')
                             .gsub('src="/images', 'src="http://www.poligon.info/images')
                             .html_safe if !@recentCategory.description.nil? %>
        </div>
        <div class="col-md-3" >
          <div class="category-image">
            <% image_path = @recentCategory.image_path.gsub!("c:\\poligon_images", "http://www.poligon.info/images").gsub!("\\", "/") if !@recentCategory.image_path.nil? %>
            <%= link_to(image_tag(image_path, class: "img img-responsive center-block category-image", alt: @recentCategory.title, title: @recentCategory.title, :width => '200px'), image_path, class: "fancybox") if !@recentCategory.image_path.nil? %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br>
<div class="row">
  <div class="col-md-12">
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div id="additionInfo" class="panel-collapse collapse">
          <div class="panel-body">
            <%= render partial: @recentCategory.more_info if !@recentCategory.more_info.nil? && @recentCategory.more_info != '' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render "shared/products_table" %>

  <link href="/feeds" rel="alternate" title="RSS feed" type="application/rss+xml">
</head>

<body>

<script>
    $(document).ready(function() {
        $("a.fancybox").fancybox();
    });
</script>
<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" style="margin-bottom: 5px; margin-top: -10px" href=<%= root_path %>><%= image_tag('logo185.png', alt: 'Компания "ПОЛИГОН"') %></a>

    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li><%= link_to 'Новости', news_items_path %></li>
        <li><%= link_to 'Публикации', publications_index_path %></li>
        <li><%= link_to 'Каталог', categories_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Поиск <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <form class="navbar-search pull-left" method="get" action="/search">
              <input type="text" class="search-query search_form" name="q" placeholder="">
            </form>
            </li>
          </ul>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if user_signed_in? %>
            <div style="margin-bottom: 0px; margin-top: 15px; margin-right: 15px;"><b>Здравствуйте, <%= current_user.name %></b></div>
          <% end %>
        </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Информация <b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><a href=<%= company_about_path %>> <i class="glyphicon glyphicon-saved"></i>  О компании</a></li>
            <li><a href=<%= content_sertificates_path %>> <i class="glyphicon glyphicon-certificate"></i>  Сертификаты</a></li>
            <li><a href=<%= feedback_booklets_path %>> <i class="glyphicon glyphicon-book"></i>  Буклеты и каталоги</a></li>
            <li><a href=<%= company_vacancies_path %>> <i class="glyphicon glyphicon-bullhorn"></i>  Список вакансий</a></li>
            <li><a href=<%= feedback_mailing_list_path %>><i class="glyphicon glyphicon-envelope"></i>  Рассылка новостей</a></li>
            <li class="divider"></li>
            <li><%= link_to 'Обмен ссылками', company_links_path %></li>
            <li><%= link_to 'Карта сайта', sitemap_path %></li>
            <li><%= link_to 'Контакты', company_contacts_path %></li>
            <li class="divider"></li>
            <li>
              <% if user_signed_in? %>
                <%= link_to 'Выйти из служебного интерфейса', destroy_user_session_path, :method => :delete %>
              <% else %>
                <%= link_to 'Служебный вход', new_user_session_path %>
                <%#= link_to 'Зарегистрироваться', new_user_registration_path %>
              <% end %>
            </li>
          </ul>
        </li>
        <li>
          <%= link_to '(812) 325-42-20', company_contacts_path, class: "phone" %>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">

  <div class="row row-offcanvas row-offcanvas-right">

    <div class="col-xs-12 col-sm-10">
      <p class="pull-right visible-xs">
        <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">Боковое меню</button>
      </p>
      <br><br>
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div><!--/span-->

    <div class="col-xs-6 col-sm-2 sidebar-offcanvas" id="sidebar" role="navigation"><br><br><br>
      <div class="list-group">
        <%= link_to image_tag("logo/logo_200x60/tele.gif", alt: '"TELE"', title: "реле времени и контроля из Австрии", :class => 'partners list-group-item'), :action => 'show', :controller => 'categories', :id => '142' %>

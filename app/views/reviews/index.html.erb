<h1>Список обзоров</h1>

<table class="table table-striped">
  <tr>
    <th style="width: 80%;">Название</th>

    <th style="width: 20%;">Дата публикации</th>
    <th></th>
  </tr>

  <% @reviews.each do |review| %>
      <tr>
        <td><%= link_to review.title, review %></td>

        <td><%= review.created_at.strftime("%d.%m.%Y") %></td>
      </tr>
  <% end %>
</table>
